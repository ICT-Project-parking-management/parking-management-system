<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>주차관리 시스템</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link rel="stylesheet" href="/css/style.css" type="text/css">
        <link rel="stylesheet" href="/css/main.css" type="text/css">
        <!-- jquery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        
    </head>
    <body>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">주차관리 시스템</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        
                        <% if(userName) { %>
                            <li class="nav-item"><a class="nav-link active" aria-current="page" > 안녕하세요 <%= userName %> 님! </a></li>
                            <% if(userName =='admin') { %>
                                <li class="nav-item"><a class="nav-link active" aria-current="page" href="javascript:checkMyBan('ban-modal');">부정주차 차량 확인하기<span class="alarm"><%= banData.length %></span></a></li>
                            <% } else { %>
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="javascript:checkMyArea('area-modal');"> 내 주차구역 확인하기</a></li>
                
                            <% } %>
                            <a class="nav-link active" aria-current="page" href="/logout_check/<%= parkingLotIdx %>"> 로그아웃</a> 
                        <% }else{%>
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="javascript:checkMyLogin('requireLogin-modal');"> 내 주차구역 확인하기</a></li>
                            <a class="nav-link active" aria-current="page" href="javascript:openModal('login-modal');"> 로그인</a>
                            <% } %>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container">
            <div class="text-center mt-5">
                <h1> <%= complexName %> 주차장 </h1>
                <p class="lead">실시간 주차 현황을 확인하세요.</p>

                <div class="parking">

                    <% parkingLotInfo.forEach(element => { %>
                        <h3><%= element.floorName %></h3>
                        <table>
                            <thead>
                                <tr>
                                    <% element.areas.forEach(area => { %>
                                        <th> <%= area.areaName %> </th>    
                                    <% }); %>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <% element.areas.forEach(area => { %> <%
                                        if (area.isBlocked) { %> <%
                                            if (area.areaInfo === 1) { %> <td id=blocked> <img class="icon" src="/img/disabled.png" width="50" height="50"/> </td> <% }
                                            else if (area.areaInfo === 2) { %> <td id=blocked> <img class="icon" src="/img/electric.png" width="50" height="50"/> </td> <% }
                                            else { %> <td id=blocked></td> <% }
                                        %> <% }
                                        else { %> <%
                                            if (area.areaInfo === 1) { %> <td id=notBlocked> <img class="icon" src="/img/disabled.png" width="50" height="50"/> </td> <% }
                                            else if (area.areaInfo === 2) { %> <td id=notBlocked> <img class="icon" src="/img/electric.png" width="50" height="50"/> </td> <% }
                                            else { %> <td id=notBlocked></td> <% }
                                        %> <% }
                                    %> <% }); %>
                                </tr>
                            </tbody>
                        </table>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Login Modal -->
        <div id="modal"></div>
        <div class="modal-con login-modal">
            <p class="title">로그인</p>
            <div class="con">
                <form class="login">
                <input class="form_control" type="text" id="login_id" name="username" placeholder="아이디" required="required">
                <input class="form_control" type="text" id="login_pw" name="password" placeholder="비밀번호" required="required">
                <p id="errormsg"></p>
                <button type="button" id="login_btn" name="login" class="btn btn_default">로그인</button>
                </form>
                <p>관리자 및 입주민 회원가입은 관리실에 문의하세요.</p>
            </div>
        </div>

        <!-- My Area Modal-->
        <div id="modal2"></div>
        <div class="modal-con2 area-modal">
            <a href="javascript:;" class="close">X</a>
            <p class="title">내 주차구역 확인하기</p>
            <div class="con">
                <h5><b>주차장</b>: <%=complexName %></h5>
                <div class="myAreaInfo"></div>
            </div>
        </div>

         <!-- Require Login Modal-->
         <div id="modal3"></div>
         <div class="modal-con3 requireLogin-modal">
             <a href="javascript:;" class="close">X</a>
             <p class="title">내 주차구역 확인하기</p>
             <div class="con">
                 <h5>입주민 대상 기능입니다. 로그인을 진행해주세요.</h5>
             </div>
         </div>

         
         <!-- My Ban Modal-->
        <div id="modal4"></div>
        <div class="modal-con4 ban-modal">
            <a href="javascript:;" class="close">X</a>
            <p class="title">부정주차 차량 확인하기</p>
            <div class="con">
                <a class="nav-link active" aria-current="page" href="/mail">메일전송</a>
                <table>
                    <thead>
                        <tr>
                        <th>주차장</th><th>층</th><th>구역</th><th>차량번호</th><th></th>
                        </tr>
                    </thead>
                </table>
              
               <div class="container">
                <table id="banList">
                    <% banData.forEach(info => { %>
                        <tr>
                            <th><%= info.parkingLotIndex %></th>
                            <th><%= info.floor %></th>
                            <th><%= info.areaName %></th>
                            <th><%= info.carNum %></th>
                            <th><input type='button' id= "<%= info.carNum %>" value='Delete' onclick='deleteRow(this)'/></th>
                        </tr>
                      
                     <% }); %>
                  </table>
                </div>
                
         </div>
        
        <script>
            function openModal(modalname){
                document.get
                $("#modal").fadeIn(300);
                $("."+modalname).fadeIn(300);
            }

            $("#modal, .close").on('click',function(){
                $("#modal").fadeOut(300);
                $(".modal-con").fadeOut(300);
            });

            function checkMyArea(modalname){
                document.get
                $("#modal2").fadeIn(300);
                $("."+modalname).fadeIn(300);

                $.ajax({
                    type: "GET",
                    url: "/main/<%= parkingLotIdx %>/myArea",
                    dataType: "json",
                    success: (data) => {
                        data.forEach((e) => {
                            if (e.areaName !== "none") {
                                $(".myAreaInfo").append(
                                    "<h5> <b>차량번호</b>: " + e.carNum +
                                    "&ensp; <b>주차층</b>: " + e.areaName.substr(2, 2) +
                                    "&ensp; <b>주차구역</b>: " + e.areaName.substr(4, 2) + "<h5>"
                                )
                            }
                        })
                        
                    }
                })
            }
            $("#modal2, .close").on('click',function(){
                var content = document.querySelector('.myAreaInfo');
                content.innerHTML = '';
                $("#modal2").fadeOut(300);
                $(".modal-con2").fadeOut(300);
            });
             function checkMyLogin(modalname){
                document.get
                $("#modal3").fadeIn(300);
                $("."+modalname).fadeIn(300);
            }
            $("#modal3, .close").on('click',function(){
                $("#modal3").fadeOut(300);
                $(".modal-con3").fadeOut(300);
            });

            function checkMyBan(modalname){
                document.get
                $("#modal4").fadeIn(300);
                $("."+modalname).fadeIn(300);
            }
            $("#modal4, .close").on('click',function(){
                $("#modal4").fadeOut(300);
                $(".modal-con4").fadeOut(300);
            });

            function deleteRow(click){
                $.ajax({
                    type: "POST",
                    url: "/main/<%= parkingLotIdx %>/banDoneList",
                    data: {"carNum": click.id},
                    success: (data) => {
                    }
                });
                var index = click.parentNode.parentNode.rowIndex;
                document.getElementById("banList").deleteRow(index);

            }
    

        </script>

        <!--Login AJAX-->
        <script src="/js/login.js"></script>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>
